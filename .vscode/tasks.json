{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "make run-tests",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "./build/encoder3 test.cnf cnf3.cnf",
      "group": "test",
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Build & Run",
      "dependsOrder": "sequence",
      "dependsOn": ["Build", "Run"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Rebuild",
      "dependsOrder": "sequence",
      "dependsOn": ["Clean", "Build"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Clean, Build & Run",
      "dependsOrder": "sequence",
      "dependsOn": ["Clean", "Build", "Run"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
